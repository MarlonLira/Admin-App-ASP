@model IEnumerable<Admin.Models.Produto>

@{
    ViewBag.Title = "Produtos";
    Layout = "~/Views/Shared/_mainView.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Produtos Cadastrados
            
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> @Html.ActionLink("Início", "Index", "Home")</li>
            <li>@Html.ActionLink("Produtos", "Index", "Produto")</li>
            <li class="active">Produtos Cadastrados</li>
        </ol>
    </section>

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">@Html.ActionLink("Cadastrar Produto", "Create")</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.Quantidade)</th>
                        <th>@Html.DisplayNameFor(model => model.Valor)</th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
                            <td>@Html.DisplayFor(modelItem => item.Valor)</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
    
